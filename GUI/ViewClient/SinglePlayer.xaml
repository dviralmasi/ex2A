<Window x:Class="GUI.ViewClient.SinglePlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.ViewClient"
        mc:Ignorable="d"
        xmlns:controls="clr-namespace:GUI.ViewClient"
        Title="SinglePlayer" Height="300" Width="300" Loaded="SinglePlayer_Loaded">
    <Grid Margin="0,0,0,0">
        <Button x:Name="button" Content="main menu" Canvas.Left="215" Canvas.Top="10" Width="75" Margin="207,6,10,244" RenderTransformOrigin="-0.535,4.095"/>
        <Button x:Name="button1" Content="solve maze" Canvas.Left="116" Canvas.Top="10" Width="75" Margin="110,6,107,244"/>
        <Button x:Name="button2" Content="restart game" Canvas.Left="10" Canvas.Top="10" Width="75" Click="restart_Click" Margin="10,6,207,244"/>
        <controls:MazePlayer x:Name="dfgyuio" HorizontalAlignment="Left" Height="227" Margin="0,42,0,0" VerticalAlignment="Top" Width="292" Rows = "{Binding MazeRows}" Cols = "{Binding MazeCols}" 
                            />
    </Grid>
</Window>

